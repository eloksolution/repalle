<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#6699ff"
        android:orientation="vertical">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/greybackground"
            android:weightSum="1">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Blood request"
                android:textSize="20dp"
                android:textColor="#2683c2"
                android:gravity="center" />
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/pname"
                android:hint="Patient Name"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/age"
                android:hint="Age"
                android:inputType="number"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:id="@+id/bgroup"
                android:hint="Blood Group"
                android:spinnerMode="dropdown"
                android:background="@drawable/txtbox_row_border"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="right"
                android:paddingTop="0dp"
                android:paddingRight="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/invisible" />
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/reqiredunits"
                android:hint="Required Units"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/hospitalname"
                android:hint="Hospital Name"
                android:inputType="text"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/mobile"
                android:hint="Mobile"
                android:inputType="number"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/date"
                android:hint="Date"
                android:drawableRight="@drawable/calendar"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/village"
                android:hint="Village"
                android:inputType="text"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:maxLines="4"
                android:minLines="2"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/mandal"
                android:hint="select mandal"
                android:spinnerMode="dropdown"
                android:background="@drawable/txtbox_row_border"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="right"
                android:paddingTop="0dp"
                android:paddingRight="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/invisible1" />

            <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content" android:orientation="horizontal"
                android:layout_width="fill_parent">
                <Button android:layout_width="140dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/cancel"
                    android:text="cancel"
                    android:textColor="#fff"
                    android:background="@drawable/btn1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
                <Button android:layout_width="140dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/submit"
                    android:text="request"
                    android:textColor="#fff"
                    android:background="@drawable/btn"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>



</ScrollView>